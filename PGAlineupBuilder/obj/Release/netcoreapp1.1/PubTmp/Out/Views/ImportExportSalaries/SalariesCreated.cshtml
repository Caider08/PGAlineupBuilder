@{
}
@section OverrideStyles
{
    <style>
        table {
            border: 1px;
            width: 80%;
            height: 100%;
        }

        th {
            text-align: center;
            background-color: #e68a00;
            color: azure;
        }

        table caption {
            font-size: 200%;
        }

        tr:hover {
            background-color: #FFB273;
        }

        tr:nth-of-type(odd) {
            background-color: #ffebcc;
        }

        tr:nth-of-type(even) {
            background-color: #ffd699;
        }
    </style>
}
<h1>@ViewBag.Game</h1>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Salary</th>
    </tr>
    
    @foreach (Golfer golfer in ViewBag.Golfers)
    {  <tr>
            <td>@golfer.Playerid</td>
            <td>@golfer.Name</td>
            <td>@golfer.Salary</td>
        </tr>
    }
</table>


