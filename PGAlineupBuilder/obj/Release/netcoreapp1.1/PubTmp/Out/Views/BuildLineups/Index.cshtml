    <h1>Build a Lineup</h1>
    <div style="margin-top: 25px" text-align: center">
        <a style="font-size: 1.5em; margin-top: 25px" asp-controller="BuildLineups" asp-action="ChooseFDraft">Choose FantasyDraft Tournament</a>
    </div>

    <div style="text-align: center; margin-top: 25px">
        <a style="font-size: 1.5em" asp-controller="BuildLineups" asp-action="ChooseDK">Choose DraftKings Golf Tournament</a>
