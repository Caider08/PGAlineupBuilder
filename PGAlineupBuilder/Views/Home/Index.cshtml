@{
}
@model IList<PGAlineupBuilder.Models.BlogPost>

<h1>Daily Fantasy Golf</h1>

@foreach (BlogPost bp in Model)
{
    <div>
        <h3><a asp-action="BlogPost" asp-controller="BlogPosting" asp-route-id="@bp.Name">@bp.Name</a></h3>
        <span>@bp.Category.Name&nbsp;@bp.Tag.Name</span>
    </div>

    <div>
        <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
    </div>

    <div>
        <p>@bp.Content</p>
    </div>
}