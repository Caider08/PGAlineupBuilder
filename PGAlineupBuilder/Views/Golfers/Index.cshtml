<h1>Search Our DraftKings Database</h1>

<form method="post" asp-controller="Golfers" asp-action="SearchD">

    <div class="form-group">
        <span>
            <label for="SearchMethod">Search By Golfer</label>
            <input type="radio" name="SearchMethod" id="SearchMethod"value="ByGolfer" checked="checked" />
        </span>
        <br />
        <span>
            <label for="SearchMethod">Search By Tournament</label>
            <input type="radio" name="SearchMethod" id="SearchMethod" value="ByTournament" />
        </span>
        <br />
        <span>@ViewBag.BlankTerm</span>
        <span>@ViewBag.None</span>

        <!--<span class="form-control">
            
        </span>-->
    </div>

    <div class="form-group">
        <span>
            <input type="text" name="searchTerm" id="searchTerm" />
        </span>
    </div>

    <input type="submit" value="Search our DraftKings Database" />
</form>

