<h1>Search Our Database</h1>

<form method="post" asp-controller="Goflers" asp-action="Search">
  
    <div class="form-group">
        <span>
            <label for="ByGolfer">Search By Golfer</label>
            <input type="radio" name="SearchMethod" id="ByGolfer" value="Search By Golfer" checked="checked" />
            <label for="ByTournament">Search By Tournament</label>
            <input type="radio" name="SearchMethod" id="ByTournament" value="Search By Tournament" />
        </span>

        <!--<span class="form-control">
            
        </span>-->
    </div>

    <div class="form-group">
        <span>
            <input type="text" name="searchTerm" id="searchTerm" />
        </span>
    </div>

    <input type="submit" value="Search" />
</form>

