<h1>Search our Database for PGA, European Tour, and Daily Fantasy Golf articles</h1>

<form method="post" asp-controller="GolfArticles" asp-action="byTerm">

    <h2>Search by Article title or keywords</h2>


    <div class="form-group">
        <span>
            <label for="SearchMethod">Search articles by Title</label>
            <input type="radio" name="SearchMethod" id="SearchMethod" value="ByTitle" checked="checked" />
        </span>
        <br />
        <span>
            <label for="SearchMethod">Search articles by keyword</label>
            <input type="radio" name="SearchMethod" id="SearchMethod" value="ByKeyword" />
        </span>
        <br />
        <span>@ViewBag.BlankTerm</span>
        <span>@ViewBag.Nothing</span>

    </div>

    <div class="form-group">
        <span>
            <label for="sTerm">Search for Past Articles</label>
            <input type="text" name="sTerm" id="sTerm" />
        </span>
        <input type="submit" value="Search Past Golf Articles" />
    </div>
</form>
