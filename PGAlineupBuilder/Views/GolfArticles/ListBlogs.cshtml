@{
}
@model IList<PGAlineupBuilder.Models.BlogPost>

<div class="body-content" style="text-align: left">
    @if (ViewBag.header == null)
    {
        <div class="row" style="text-align: center">
        <h2>Our Latest Golf Articles</h2>
        </div>

    }
    else
    {
       <div class="row" style="text-align: center">
       <h2>@ViewBag.header Articles</h2>
       </div>
    }
    
    @*<div class="tools-right">
        @Html.Partial("_SearchArticles")
    </div>*@

    @if (Model.Count() > 0)
    
    {
        foreach(BlogPost post in Model)
        {
           @Html.Partial("_PartialBlogPostTemplate", post)

        }

    }
    else
    {
        <p>Your search returned 0 Articles.</p>

    }
   

    <div class="row" style="float: left; text-align: center; margin-top: 25px;">
        <a style="font-size: 1.5em" asp-action="Index" asp-controller="Home">Return to Homepage</a>
    </div>

</div>


