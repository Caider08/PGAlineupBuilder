@{
    Layout = null;
}
@model PGAlineupBuilder.ViewModels.NewBlogPostViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width-device-width, initial-scale-1.0" />
    <title>@ViewData["Title"] - PGAlineupBuilder</title>

    <!--TinyMCE for editing blogPosts-->
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=zm4ybtvzgks5eji7cbb0hzdq7i05m3gxskwnay3b5qdqgy26"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            height: 300,
            theme: 'modern',
            plugins: 'lists advlist image imagetools'

        });
    </script>

</head>
<body>
    <h2>Write a new Golf Article</h2>
    <form method="post" asp-controller="GolfArticles" asp-action="PublishPost">

        <div class="form-group">
            <label asp-for="Name"></label>
            <textarea asp-for="Name" class="form-control"></textarea>
            <span asp-valation-for="Name"></span>

            <label asp-for="content"></label>
            <textarea asp-for="content" class="form-control"></textarea>
            <span asp-valation-for="content"></span>
        </div>

        <div class="form-group">
            <label asp-for="meta"></label>
            <textarea asp-for="meta" class="form-control"></textarea>
            <span asp-valation-for="meta"></span>

            <label asp-for="urlSlug"></label>
            <textarea asp-for="urlSlug" class="form-control"></textarea>
            <span asp-valation-for="urlSlug"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryID"></label>
            <select asp-for="CategoryID" asp-items="@Model.Categories"></select>

            <a class="form-control" asp-controller="GolfArticles" asp-action="NewCategory">Create a new Category</a>
        </div>

        <div class="form-gorup">
            <label asp-for="TagID"></label>
            <select class="form-control" asp-for="TagID" asp-items="@Model.Tags"></select>

            <a class="form-control" asp-controller="GolfArticles" asp-action="NewTag">Create a new Tag</a>
        </div>

        <input type="submit" value="Publish your Post" />
    </form>
</body>
</html>
