@{
}
@model IList<PGAlineupBuilder.Models.BlogPost>

<h1>@ViewBag.header.Name Posts</h1>

@foreach (BlogPost bp in Model)
{
    <div>
        <h3><a asp-action="GetBlogPost" asp-controller="BlogPosting" asp-route-id="@bp.ID">@bp.Name</a></h3>
        <span><a asp-action="CategoryBlogs" asp-controller="BlogPosting" asp-route-id="@bp.Category.ID">@bp.Category.Name</a>&nbsp;<a asp-action="TagBlogs" asp-controller="BlogPosting" asp-route-id="@bp.Tag.ID">@bp.Tag.Name</a></span>-->
    </div>

    <div>
        <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
    </div>

    <div>
        <p>@bp.Content</p>
    </div>
}