<h1>Blog</h1>

<form method="get" asp-controller="BlogPosting" asp-action="Last5Blogs">
   
    <input class="form-control" type="submit" value="Get Last 5 BlogPosts" />
</form>
<br />

<form method="post" asp-controller="BlogPosting" asp-action="SearchBlogs">

    <label for="sTerm">Search for Past Blog Posts</label>
    <input type="text" class="form-control" name="sTerm" id="sTerm" />
    <input class="form-control" type="submit" value="Search for Blog Posts" />

</form>
<br />
<form method="post" asp-controller="BlogPosting" asp-action="NewPost">
    <input class="form-control" type="submit" value="Make a New Blog Post" />
</form>
